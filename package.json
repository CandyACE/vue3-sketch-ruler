{
  "name": "vue3-sketch-ruler",
  "version": "1.1.0",
  "author": "kakajun <253495832@qq.com>",
  "license": "MIT",
  "private":true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/majun2232/vue3sketchRuler"
  },

  "typings": "src/types.ts",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "style": "dist/style.css",
  "scripts": {
    "dev": "vite --config vite.demo.js",
    "build": "vite build",
     "precommit": "lint-staged",
   "lint-fix": "eslint --fix  --ext .vue,.js,.ts",
    "lint:lint-staged": "lint-staged -c ./.husky/lintstagedrc.js",
    "format": "prettier-eslint --write src/**/*.{js,vue,css,scss,styl} && prettier-eslint --write packages/**/*.{js,vue,css,scss,styl} ",
    "css": "cross-env stylelint src/**/*.{html,vue,css,less,scss,styl} --fix && stylelint packages/**/*.{html,vue,css,less,scss,styl} ",
    "pretty": "pretty-quick --staged",
    "prepare": "husky install",
    "commit": "git-cz",
    "gen": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
   "lint-staged": {
    "*.{ts,tsx,js,vue,less}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{vue,css,less}": "stylelint --fix"
  },
         "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
     "vue": "^3.2.19",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@vitejs/plugin-vue": "^1.9.2",
    "@vue/eslint-config-prettier": "^6.0.0",
     "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "conventional-changelog-cli": "^2.1.1",
     "cz-conventional-changelog" :"3.3.0",
      "commitizen": "^4.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "7.17.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "sass": "^1.39.0",
    "stylelint": "13.13.1",
    "stylelint-config-standard": "22.0.0",
    "stylelint-order": "4.1.0",
    "vite": "^2.6.2",
    "vite-plugin-dts": "^0.8.2"
  },

  "keywords": [
    "vue3",
    "ruler",
    "javascript",
    "sketch-ruler",
    "vue-ruler",
    "vite2"
  ],
  "bugs": {
    "url": "https://github.com/majun2232/vue3sketchRuler/issues"
  },
  "homepage": "https://github.com/majun2232/vue3sketchRuler/blob/master/README.md"
}
